<style type="text/css">
    .image {
        position: relative;
        width: auto;
        height: 300px;
        float: left;
        border: outset;
        border-color: #7ac0da;
        margin-left: 5px;
        margin-top: 5px;
    }

        .image h2 {
            position: absolute;
            top: 150px;
            left: 0;
            width: 100%;
        }

    h2 span {
        color: white;
        font: bold 24px/45px Helvetica, Sans-Serif;
        letter-spacing: -1px;
        background: rgb(0, 0, 0); /* fallback color */
        background: rgba(0, 0, 0, 0.7);
        padding: 10px;
    }

        h2 span.spacer {
            padding: 0 5px;
        }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0);
        transition: background 0.5s ease;
    }

    .image:hover .overlay {
        display: block;
        background: rgba(0, 0, 0, .3);
    }

    .mytitle {
        position: absolute;
        width: 500px;
        left: 0;
        top: 120px;
        font-weight: 700;
        font-size: 30px;
        text-align: center;
        text-transform: uppercase;
        color: white;
        z-index: 1;
        transition: top .5s ease;
    }

    .image:hover .mytitle {
        top: 90px;
    }

    .button {
        position: absolute;
        width: 300px;
        left: 0;
        top: 210px;
        text-align: center;
        opacity: 0;
        transition: opacity .35s ease;
        background-color: #7ac0da;
    }

        .button a {
            width: 200px;
            padding: 12px 48px;
            text-align: center;
            color: white;
            border: solid 2px white;
            z-index: 1;
        }

    .image:hover .button {
        opacity: 1;
    }
</style>
@{
    ViewBag.Title = "Women";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">

                <div id="drawForm">
                    <img src="/Images/covers.jpg" alt="Mountain View" style="width: 970px; height: 300px;">
                </div>

            </hgroup>
            <p>
                Seriously the best customer service ever! Will be a forever Our customer!
            </p>
        </div>
    </section>
}

@foreach (var i in Model){ 
    <div class="image">
        <img src="@i.PImage" alt="@i.PName" style="width:300px;height:300px;"/>
        <h2 class="mytitle"><span>@i.PName<span class='spacer'></span><br />
            <span class='spacer'></span>@i.Price</span></h2>
        <div class="overlay"></div>
        <div class="button">
             @using (Html.BeginForm("UpdateProduct", "Product")){
                <input id="hdntxt" type="hidden" name="upid" value="@i.PId"/>
                   <input id="hdntxt" type="hidden" name="mpid" value="Women"/>
                <input id="upd" type="submit" value="Update" />       }
             @using (Html.BeginForm("DeleteProduct", "Product")){
                <input id="hdntxt" type="hidden" name="dpid" value="@i.PId"/>
                   <input id="hdntxt" type="hidden" name="mpid" value="Women"/> 
                <input id="dlt" type="submit" value="Delete" />    }         
        </div>
    </div>
}

